<link rel="stylesheet" href="<%=url%>css/dark/cours/template_cours.css">
<link rel="stylesheet" href="<%=url%>css/dark/wysiwyg.css">

<%include common/include.ejs%>

<meta name="viewport" content="width=device-width, initial-scale=.9, maximum-scale=2.0" />
<nav id = "menuBar">
    <nav id="leftBar">
    <button id="bold" class="default" onclick = "textFormat('bold')">B</button>
    <button id="italic" class="default" onclick = "textFormat('italic')">I</button>
    <button id="underline" class="default" onclick = "textFormat('underline')">U</button>
    
    <select id="textType">
        <option value="div">Paragraphe</option>
        <option value="tips">Tips</option>
        <option value="h3">Titre de section</option>
        <option value="h5">Titre de sous-section</option>
    </select>
    </nav>
    <nav id="rightBar">
        <button class="default" onclick = "code()" id = "code" >&nbsp;
        </button>
        <button class="default" onclick = "note()" id = "note">&nbsp;</button>
        <button class="default" onclick = "toogleSmiley()" id = "smiley">ü§î</button>
    </nav>

</nav>
<article id = "content" class="coursContener" contentEditable = true>
    <div>&nbsp;</div>
</article>
<div id = "smileyBoard">
    <%for(i=0;i<79;++i){%><button onclick = "insertSmiley(this)"><%=String.fromCharCode(55357) + String.fromCharCode(56832 + i)%></button><%}%></div>
<div id = "codeDialog" class = "window">
    <div class = "title">
        <p>Ins√©rer du code</p>
        <button class = "windowsOptions" onclick = "hide(this)"></button>
        <button class = "windowsOptions" onclick = "validate(this)"></button>
    </div>
    <table>
        <tr>
            <td>Langage</td>
            <td><input type = "text"></input></td>
        </tr>
        <tr><td>Suggestion:</td>
            <td>[LANGAGE]</td></tr>
        <tr>
            <td>Code</td>
            <td><textarea resizable = "no"></textarea></td>
        </tr>
    </table>
</div>
<div id = "noteDialog">
    <div class = "title">
        <button class = "windowsOptions" onclick = "hide(this)"></button>
        <p style = "float:left">D√©finir ce paragraphe en tant que:</p>
    </div><br/>
    <div style = "clear:both" class = "info tips" onclick="validate(this)"><img class = "boxIcon"src = "<%=url%>images/icons/info.png"><p>Information</p></div>
    <div class = "good tips" onclick="validate(this)"><img class = "boxIcon" src = "<%=url%>images/icons/check.png"><p>Bonne id√©e / am√©lioration possible</p></div>
    <div class = "warning tips" onclick="validate(this)"><img class = "boxIcon" src = "<%=url%>images/icons/warning.png"><p>Avertissement</p></div>
    <div class = "error tips" onclick="validate(this)"><img class = "boxIcon" src = "<%=url%>images/icons/error.png"><p>Erreur / √† ne surtout pas faire</p></div>
    <div class = "reset" onclick="validate(this)"><img class = "boxIcon" src = "<%=url%>images/icons/reset.png"><p>Restaurer un paragraphe normal</p></div>
</div>
<script src = "<%=url%>js/wysiwyg.js"></script>
